<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.fakewedding.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action android:id="@+id/action_homeFragment_to_SwapingFragment"
            app:destination="@+id/swapingFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left">
        </action>
    </fragment>
    <fragment
        android:id="@+id/swapingFragment"
        android:name="com.example.fakewedding.fragment.StartSwapFaceFragment"
        android:label="SwapingFace"
        tools:layout="@layout/fragment_start_swap_face">
        <action android:id="@+id/action_swapFragment_to_uploadFragment"
            app:destination="@+id/uploadFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.example.fakewedding.fragment.UploadFragment"
        android:label="UploadFragment"
        tools:layout="@layout/fragment_upload">
        <action android:id="@+id/action_uploadFragment_to_swapFragment"
            app:destination="@+id/swapingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right">
            <argument android:name="selected_image"
                app:argType="string"/>
        </action>


    </fragment>
</navigation>