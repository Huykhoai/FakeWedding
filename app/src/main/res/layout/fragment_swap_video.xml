<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SwapVideoFragment"
    android:orientation="vertical"
    android:background="#F2FDFF">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/constraintLayout10"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@color/white">

      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:src="@drawable/logo_home"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:src="@drawable/ic_x2"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:id="@+id/video_swap_menu"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/top_left_right"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="5dp"
       android:padding="5dp"
       android:orientation="vertical"
       android:layout_marginTop="20dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Wedding Template Video"
          android:textSize="25dp"
          android:textStyle="bold"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/recycle_listVideo"
          android:layout_gravity="center"/>
   </LinearLayout>


</LinearLayout>